{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "dist",
      "strictNullChecks": true,
      "strict": true,
      "esModuleInterop": true,
      "incremental": true,
      "types": ["@types/jest"],
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["dist", "node_modules"]
}